    </test>
    <test name="Firefox Test">
        <parameter name="option" value="Firefox"/>
        <classes>

            <class name="Exercises.TestNGAssignment2"/>
        </classes>
    </test>
    <test name="Edge Test">
        <parameter name="option" value="Edge"/>
        <classes>
            <class name="Exercises.TestNGAssignment2"/>
        </classes>
    </test>
</suite>